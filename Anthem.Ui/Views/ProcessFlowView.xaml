                <Label Grid.Column="2" Grid.Row="7" Content="Lts" Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="8" Content="RV-25L Mass&#xa;Temperature" Foreground="White" FontSize="20" VerticalAlignment="Center"/>
