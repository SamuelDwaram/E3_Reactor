                <Label Grid.Column="2" Grid.Row="8" Content="°C" Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="9" Content="RV-25L Stirrer&#xa;Feedback" Foreground="White" FontSize="20" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Grid.Row="9" Text="{Binding Level_2}" HorizontalContentAlignment="Center"  Background="#1d2532" Width="100" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Label Grid.Column="2" Grid.Row="9" Content="RPM" Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="10" Content="RV-25L&#xa;Pressure" Foreground="White" FontSize="20" VerticalAlignment="Center"/>
